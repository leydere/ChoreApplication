<Window x:Class="ChoreApplication.CreateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChoreApplication"
        mc:Ignorable="d"
        Title="CreateUser" Height="250" Width="300">
    <Grid>
        <Button x:Name="Create" Content="Create" HorizontalAlignment="Left" Margin="110,189,0,0" VerticalAlignment="Top" Width="75" Click="Create_Click" RenderTransformOrigin="-0.335,1.335"/>
        <Label Content="User Name:" HorizontalAlignment="Left" Margin="34,24,0,0" VerticalAlignment="Top"/>
        <TextBox Name="UserName" HorizontalAlignment="Left" Height="23" Margin="110,24,0,0" Text="" VerticalAlignment="Top" Width="120"/>
        <Border Background="Gray" Margin="162,52,0,47" Grid.RowSpan="1" HorizontalAlignment="Left" Height="120" Width="120">
            <Image x:Name="profilePicture"/>
        </Border>
        <Label Content="Profile Picture:" HorizontalAlignment="Left" Margin="71,70,0,0" VerticalAlignment="Top"/>
        <Button x:Name="AddProfilePicture" Content="Add Profile Picture" Grid.Column="0" HorizontalAlignment="Left" Margin="47,101,0,0" VerticalAlignment="Top" Width="110" Click="AddProfilePicture_Click"/>

    </Grid>
</Window>
